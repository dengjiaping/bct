<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

	<ListView
		android:id="@+id/order_detail_list"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:divider="@null"/>

	<RelativeLayout
		android:id="@+id/order_detail_bottom_rl"
		android:layout_width="match_parent"
		android:layout_height="44dp"
		android:layout_alignParentBottom="true"
		android:background="@color/white"
		android:paddingEnd="12dp"
		android:paddingStart="12dp">

		<TextView
			android:id="@+id/order_detail_price"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:gravity="center"
			android:textColor="@color/middle_gray"/>

		<TextView
			android:id="@+id/order_detail_btn2"
			android:layout_width="100dp"
			android:layout_height="35dp"
			android:layout_alignParentEnd="true"
			android:layout_centerVertical="true"
			android:background="@drawable/ic_button"
			android:gravity="center"
			android:textColor="@color/white"/>

		<TextView
			android:id="@+id/order_detail_btn1"
			android:layout_width="100dp"
			android:layout_height="35dp"
			android:layout_centerVertical="true"
			android:layout_marginEnd="10dp"
			android:layout_toLeftOf="@+id/order_detail_btn2"
			android:background="@drawable/btn_gray_border"
			android:gravity="center"
			android:textColor="@color/middle_gray"/>
	</RelativeLayout>
</RelativeLayout>